---
type BadgeProps = {
	text: string;
	color: string;
}
const props = Astro.props as BadgeProps;
---

<div class="badge" style={`background-color: ${props.color};`}>
	{props.text}
</div>
<style>
	.badge {
		display: inline-block;
		padding: 0.2vw 0.5vw;
		border-radius: 0.5vw;
		color: #333;
		font-size: 0.8vw;
		font-weight: bold;
		margin-bottom: 0.5vw;;
	}
</style>