---
import type { IconType } from "../icons/_iconType";

// Get the customizable svgs
import DevpostIcon from "../icons/DevpostIcon.astro";
import FileDirectoryIcon from "../icons/FileDirectoryIcon.astro";
import GitHubIcon from "../icons/GitHubIcon.astro";
import LinkedinIcon from "../icons/LinkedinIcon.astro";
import SearchIcon from "../icons/SearchIcon.astro";
import Extension from "./Extension.astro";

const extensions: ((_props: IconType) => any)[] = [
	FileDirectoryIcon,
	SearchIcon,
	GitHubIcon,
	LinkedinIcon,
	DevpostIcon
]

---

<div class="extensions full-relative-height">
	{
		// For each extension, render the associated svg with the default attributes of 3rem and white
		extensions.map((ExtensionComponent) => (
			<Extension component={ExtensionComponent}></Extension>
		))
	}
</div>

<style>
	.extensions {
		background-color: var(--tertiary-bg-color);
		color: #607694;
		width: 5rem;
	}
</style>