---
type BadgeProps = {
	text: string;
	color: string;
}
const props = Astro.props as BadgeProps;
---

<div class="badge" style={`background-color: ${props.color};`}>
	{props.text}
</div>
<style>
	@media screen and (min-width: 1024px) {
		.badge {
			font-size: 0.8vw;
			padding: 0.2vw 0.5vw;
			margin-bottom: 0.5vw;
		}
	}
	@media screen and (max-width: 1023px) {
		.badge {
			font-size: 3vw;
			padding: 0.5vw 0.8vw;
			margin-bottom: 1vw;
			margin-right: 1vw;
		}
	}
	.badge {
		display: inline-block;
		border-radius: 0.5vw;
		color: #333;
		font-weight: bold;
	}
</style>